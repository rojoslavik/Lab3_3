<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BirdsActivity">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="390dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true">

    <ImageButton
        android:id="@+id/huuhkaja"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/huuhkaja"
        android:scaleType="fitCenter" />
    <ImageButton
        android:id="@+id/peippo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/peippo"
        android:scaleType="fitCenter"/>
</LinearLayout>

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="140dp"
    android:layout_marginBottom="255dp"
    android:id="@+id/linearLayout"
    android:layout_alignParentLeft="true">

        <ImageButton
            android:id="@+id/peukaloinen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/peukaloinen"
            android:scaleType="fitCenter" />
        <ImageButton
            android:id="@+id/punatulkku"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/punatulkku"
            android:scaleType="fitCenter"/>

</LinearLayout>

</android.support.constraint.ConstraintLayout>